{
    "name": "hammer",
    "displayName": "Hammer",
    "description": "Hammer for Visual Studio Code",
    "publisher": "zhileichen",
    "version": "1.1.4",
    "license": "MIT",
    "engines": {
        "vscode": "^1.35.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "Ola",
        "Party",
        "Localization",
        "Internationalization",
        "i18n",
        "Translation",
        "Translate",
        "Multi-language"
    ],
    "activationEvents": [
        "onView:localTranslations",
        "onLanguage:dart",
        "workspaceContains:*.dart",
        "workspaceContains:*/*.dart",
        "workspaceContains:*/*/*.dart"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "configuration": [
            {
                "title": "Hammer",
                "properties": {
                    "tms.autoRefresh": {
                        "type": "boolean",
                        "default": "false",
                        "description": "Enables or disables auto refresh after each change in Crowdin configuration file.",
                        "scope": "window"
                    }
                }
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "ola-hammer",
                    "title": "Hammer",
                    "icon": "resources/icon.svg"
                }
            ]
        },
        "views": {
            "ola-hammer": [
                {
                    "id": "localTranslations",
                    "name": "Translatesions"
                },
                {
                    "id": "translationProgress",
                    "name": "Progress"
                }
            ]
        },
        "commands": [
            {
                "command": "localTranslations.create",
                "title": "[Hammer] Convert to k.dart",
                "icon": {
                    "light": "resources/light/refresh.svg",
                    "dark": "resources/dark/refresh.svg"
                }
            },
            {
                "command": "localTranslations.download",
                "title": "[Hammer] Download translations",
                "icon": {
                    "light": "resources/light/download.svg",
                    "dark": "resources/dark/download.svg"
                }
            },
            {
                "command": "localTranslations.upload",
                "title": "[Hammer] Upload translations",
                "icon": {
                    "light": "resources/light/upload.svg",
                    "dark": "resources/dark/upload.svg"
                }
            },
            {
                "command": "localTranslations.search",
                "title": "Search translations in siderbar",
                "icon": {
                    "light": "resources/light/search.svg",
                    "dark": "resources/dark/search.svg"
                }
            },
            {
                "command": "translationProgress.refresh",
                "title": "Refresh progress",
                "icon": {
                    "light": "resources/light/refresh.svg",
                    "dark": "resources/dark/refresh.svg"
                }
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "translationProgress.refresh",
                    "when": "view == translationProgress",
                    "group": "navigation@0"
                },
                {
                    "command": "localTranslations.download",
                    "when": "view == localTranslations",
                    "group": "navigation@0"
                },
                {
                    "command": "localTranslations.search",
                    "when": "view == localTranslations",
                    "group": "navigation@1"
                }
            ],
            "editor/context": [
                {
                    "command": "localTranslations.create",
                    "when": "editorLangId == dart",
                    "group": "HammerGroup@0"
                },
                {
                    "command": "localTranslations.download",
                    "when": "editorLangId == dart",
                    "group": "HammerGroup@0"
                },
                {
                    "command": "localTranslations.upload",
                    "when": "editorLangId == dart",
                    "group": "HammerGroup@0"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "webpack --mode production",
        "webpack": "webpack --mode development",
        "webpack-dev": "webpack --mode development --watch",
        "test-compile": "tsc -p ./"
    },
    "icon": "icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/olachat/hammer.git"
    },
    "devDependencies": {
        "@types/adm-zip": "^0.4.32",
        "@types/glob": "^7.1.1",
        "@types/mocha": "^5.2.6",
        "@types/node": "^16.11.7",
        "@types/vscode": "1.35.0",
        "@types/yaml": "^1.0.2",
        "glob": "^7.1.1",
        "mocha": "^6.1.4",
        "ts-loader": "8.1.0",
        "tslint": "^5.12.1",
        "typescript": "^3.5.2",
        "vscode-test": "1.3.0",
        "webpack": "5.30.0",
        "webpack-cli": "4.6.0"
    },
    "dependencies": {
        "@crowdin/crowdin-api-client": "1.11.7",
        "adm-zip": "^0.4.14",
        "glob": "^7.1.4",
        "original-fs": "^1.1.0",
        "yaml": "^1.6.0"
    }
}