{
    "compilerOptions": {
      "target": "ES2016",
      "module": "commonjs",
      "lib": ["es2019", "es2017", "es7", "es6", "dom"],
      "declaration": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "sourceMap": true,
      "experimentalDecorators": true,
      "noUnusedLocals": false
    },
    "exclude": [
      "node_modules",
      "dist",
      "example",
      "**/__tests__/*",
      "**/scripts/*.ts"
    ]
  }
  